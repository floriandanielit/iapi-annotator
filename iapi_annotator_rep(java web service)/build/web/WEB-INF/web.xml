<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>data_push</servlet-name>
        <servlet-class>manipulate_data.DataPush</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>data_get</servlet-name>
        <servlet-class>manipulate_data.DataGet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>data_push</servlet-name>
        <url-pattern>/data_push</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>data_get</servlet-name>
        <url-pattern>/data_get</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <listener>
        <description>listener</description>
        <listener-class>listeners.WebappContextListener</listener-class>
    </listener>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:mysql://test.liquidjournal.org:3306/iapirepo?zeroDateTimeBehavior=convertToNull</param-value>
    </context-param>
    <context-param>
        <param-name>dbuser</param-name>
        <param-value>videsott</param-value>
    </context-param>
    <context-param>
        <param-name>dbpass</param-name>
        <param-value>uei837</param-value>
    </context-param>
</web-app>
